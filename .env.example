# ========================================
# Hydra - Environment Variables Template
# ========================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to Git!

# ----------------------------------------
# Database - Neon Postgres
# ----------------------------------------
# Get your connection string from Neon dashboard
# Format: postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require
DATABASE_URL=""

# ----------------------------------------
# NextAuth - Authentication
# ----------------------------------------
# Generate a secure secret with: openssl rand -base64 32
# Use different secrets for dev/staging/production
AUTH_SECRET=""

# Base URL where your app is hosted (server-side)
# Used for server-side operations like Stripe redirects
# Local: http://localhost:3000
# Production: https://your-domain.com
BASE_URL="http://localhost:3000"

# NextAuth URL (required by NextAuth.js)
# Should match BASE_URL value
NEXTAUTH_URL="http://localhost:3000"

# ----------------------------------------
# Email - SMTP Configuration
# ----------------------------------------
# SMTP server for magic link authentication
# Development: Use Mailtrap.io (free testing)
# Production: Use Resend, SendGrid, or AWS SES
EMAIL_SERVER="smtp://user:pass@smtp.example.com:587"

# Email address for outgoing mail
EMAIL_FROM="hydra@localhost.dev"

# ----------------------------------------
# Feature Flags & Development
# ----------------------------------------
# Enable demo mode - allows one-click signin as any demo user
# Set to "true" for development/demos, "false" or remove in production
# When enabled, shows demo signin page at /demo-signin
ENABLE_DEMO_MODE="true"

# Public demo mode flag (accessible in browser)
# Must match ENABLE_DEMO_MODE value
# Used for showing demo mode banner and UI elements
NEXT_PUBLIC_ENABLE_DEMO_MODE="true"

# Email dev mode for magic links
# Not set or "true" (default): Only log magic links to terminal, don't send emails
# "false" (case-insensitive): Log AND send emails via EMAIL_SERVER (production mode)
AUTH_EMAIL_DEV_MODE="true"

# Demo CLIENT user email for seed script
# Set this to your real email to test CLIENT features with a real account
# If not set, defaults to "client.demo@hydra.local"
HYDRA_DEMO_CLIENT_EMAIL=""

# ----------------------------------------
# Phase 7.2 - Route Planning (Google Maps)
# ----------------------------------------
# Google Maps API Key with Directions API enabled
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Required APIs: Directions API, Maps JavaScript API
GOOGLE_MAPS_API_KEY=""

# Public API key for client-side map rendering
# Must be prefixed with NEXT_PUBLIC_ to be available in the browser
# Use the same key as GOOGLE_MAPS_API_KEY
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# ----------------------------------------
# Phase 10 - Stripe Payment Integration
# ----------------------------------------
# Stripe API keys for payment processing
# Get your keys from: https://dashboard.stripe.com/apikeys
# IMPORTANT: Use TEST keys for development (starts with sk_test_ / pk_test_)
# Use LIVE keys ONLY in production (starts with sk_live_ / pk_live_)

# Server-side secret key (never expose to client)
# Test: sk_test_... | Live: sk_live_...
STRIPE_SECRET_KEY=""

# Client-side publishable key (safe to expose in browser)
# Test: pk_test_... | Live: pk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Webhook signing secret for verifying Stripe webhook events
# Get this from: https://dashboard.stripe.com/webhooks
# Format: whsec_...
STRIPE_WEBHOOK_SECRET=""

# ----------------------------------------
# Phase 11 - Stripe Connect (Vendor Onboarding)
# ----------------------------------------
# Default country code for vendor Stripe Connect accounts (ISO 3166-1 alpha-2)
# Examples: "IT" (Italy), "US" (United States), "GB" (United Kingdom)
# See: https://en.wikipedia.org/wiki/ISO_3166-1_alpha-2
STRIPE_DEFAULT_COUNTRY="IT"

# Default business type for vendor accounts
# Valid values: "company", "individual", "non_profit", "government_entity"
# See: https://stripe.com/docs/api/accounts/create#create_account-business_type
STRIPE_DEFAULT_BUSINESS_TYPE="company"
